{
  "manifest_version": 2,
  "version": "0.0.0",
  "name": "Daily 2.0 - Source for Busy Developers",
  "short_name": "Daily 2.0",
  "description": "Daily gathers the latest dev & tech posts in your new tab",
  "homepage_url": "https://www.dailynow.co",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "optional_permissions": [
    "topSites"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'",
  "browser_action": {
    "default_icon": {
      "16": "icons/action_16.png",
      "32": "icons/action_32.png"
    }
  },
  "web_accessible_resources": [
    "index.html"
  ]
}
