{
  "manifest_version": 2,
  "name": "Daily - Source for Busy Developers",
  "short_name": "Daily",
  "description": "Daily gathers the latest dev & tech posts in your new tab",
  "homepage_url": "https://www.dailynow.co",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "alarms",
    "topSites",
    "https://logo.clearbit.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
