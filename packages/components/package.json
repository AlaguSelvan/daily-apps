{
  "name": "@daily/components",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --target lib --name components src/components/index.js",
    "test": "yarn lint && vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "icons": "vsvg -s ./svg -t ./icons",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "lazysizes": "^4.1.4",
    "vue-svgicon": "^3.2.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.0",
    "@vue/cli-plugin-unit-jest": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.26",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "postcss-custom-media": "^7.0.7",
    "postcss-extend": "^1.0.5",
    "postcss-mixins": "^6.2.0",
    "postcss-nesting": "^7.0.0",
    "vue": "^2.5.17",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.26.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-mixins": {
        "mixinsDir": "./src/styles/mixins"
      },
      "postcss-extend": {},
      "postcss-nesting": {},
      "postcss-custom-media": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testURL": "http://localhost/"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "icons/*",
    "logos/*"
  ],
  "main": "./dist/components.common.js",
  "peerDependencies": {
    "vue": "^2.5.17"
  }
}
